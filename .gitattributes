# exclusion
*.html  linguist-detectable=false
*.kts   linguist-detectable=false
*.ktm   linguist-detectable=false
*.css   linguist-detectable=false

# inclusion
*.js    linguist-detectable=true
*.kt    linguist-detectable=true


# language alteration
*.c     linguist-language=cpp
*.cc    linguist-language=cpp
*.cxx   linguist-language=cpp
*.cpp   linguist-language=cpp
*.c++   linguist-language=cpp
*.hpp   linguist-language=cpp
*.h     linguist-language=cpp
*.h++   linguist-language=cpp
*.hh    linguist-language=cpp